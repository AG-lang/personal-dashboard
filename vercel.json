{
  "builds": [
    { 
      "src": "frontend/next.config.js", 
      "use": "@vercel/next",
      "config": {
        "outputDirectory": "frontend/.next"
      }
    },
    { 
      "src": "api/app/main.py", 
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.11",
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/app/main.py",
      "headers": {
        "Cache-Control": "s-maxage=60, stale-while-revalidate=300"
      }
    },
    { 
      "src": "/(.*)", 
      "dest": "frontend/$1",
      "headers": {
        "Cache-Control": "public, max-age=86400, s-maxage=86400, stale-while-revalidate=604800"
      }
    }
  ],
  "functions": {
    "api/app/main.py": {
      "runtime": "python3.11",
      "includeFiles": "api/**",
      "memory": 512,
      "maxDuration": 30
    }
  },
  "env": {
    "PYTHONPATH": "api"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "trailingSlash": false,
  "cleanUrls": true,
  "redirects": [
    {
      "source": "/dashboard",
      "destination": "/",
      "permanent": true
    }
  ]
}